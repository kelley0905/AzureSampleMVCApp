@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>ASP.NET</h1>
    <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
    <p><a href="https://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

<div class="row">
    <div class="col-md-4">
        <h2>App Settings and Connection Strings</h2>
        <p>This is app setting Day Of Week <b>dayOfWeek</b></p>
        @Environment.GetEnvironmentVariable("APPSETTING_dayOfWeek")
    </div>
    <div class="col-md-4">
        <h2>Configuration Manager Example</h2>
        <p>This is from Configuration Manager<br/>
        <b>@System.Configuration.ConfigurationManager.AppSettings["favoriteColor"]</b></p>
    </div>
    <div class="col-md-4">
        <h2>Web Hosting</h2>

    </div>
</div>